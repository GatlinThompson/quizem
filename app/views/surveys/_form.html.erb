<%= form_with(model: survey) do |form| %>
  <% if survey.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
        <% survey.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <h4>Questions</h4>
  <div id="survey_questions">
    <%= form.fields_for :survey_questions do |sq_form| %>
      <%= render "survey_questions/survey_questions", form: sq_form %>
    <% end %>
  </div>
  <%= form.submit "Add Survey Question", 
      formaction: survey_question_path(@survey.survey_questions.size), 
      formmethod: :post, 
      formnovalidate: true, 
      id: "add-survey-question" %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
