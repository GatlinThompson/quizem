<%= form_with(model: survey) do |form| %>
  <% if survey.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
        <% survey.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block fs-4" %>
    <%= form.text_field :name, class: "mb-5 w-100" %>
  </div>

  <h3>Questions</h3>
  <hr>
  <div id="survey_questions">
    <%= form.fields_for :survey_questions do |sq_form| %>
      <%= render "survey_questions/survey_questions", form: sq_form %>
    <% end %>
  </div>
  <%= form.submit "Add Question", 
      formaction: survey_question_path(@survey.survey_questions.size), 
      formmethod: :post, 
      formnovalidate: true, 
      id: "add-survey-question",
      class: "btn btn-outline-success" %>

  <div class="d-flex justify-content-center mb-3 mt-5">
    <%= form.submit class: "btn btn-success" %>
  </div>

  <div>
    <%= link_to "Back to surveys", surveys_path, class: "d-flex justify-content-center" %>
  </div>

<% end %>
