<div>
    <hr>
  <%#Question Bank and Type%>
  <div class="d-flex justify-content-end pt-3 text-secondary" >
    <p>
      <strong>Question Type:</strong>
      <%= question.question_type.titleize %>
    </p>
  </div>
  
  <%#Question Title%>
  <div class="py-4">
    <h2>Question <%=index%>:</h2>
    <div class="fs-4">
      <%= question.title %>
    </div>
  </div>

  <%#Question Type Display%>
  <div class= "p-3">
    <% if question.true_false?%>
       <div class="alert <%= question.true_false.correct_answer? ? 'alert-success fw-bold' : 'alert-secondary' %>">
        True  
      </div>
      <div class="alert <%= question.true_false.correct_answer? ? 'alert-secondary' : 'alert-success fw-bold' %>">
        False 
      </div>
    <% end %>
    </div>
 
    <% if question.multiple_choice?%>
      <% question.multiple_choices.each do |choice|%>
        <%#questions/question_option for when it's rendered in quizzes%>
        <%= render "questions/question_option", choice: choice %>
      <%end%>
    <% end %>

    <% if question.multiple_answers?%>
      <% question.multiple_answers.each do |answer|%>
        <%#questions/question_option for when it's rendered in quizzes%>
        <%= render "questions/question_option", choice: answer %>
      <%end%>
    <% end %>

    <% if question.matching? %>
      <%#questions/matching_show for when it's rendered in quizzes%>
      <%= render "questions/matching_show", question: question%>
    <% end %>
  </div>