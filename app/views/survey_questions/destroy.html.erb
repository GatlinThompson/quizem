<%# app/views/survey_questions/destroy.html.slim %>
<%= fields model: @survey do |form| %>
  <%= form.fields_for :survey_questions, child_index: params[:index] do |qq_form| %>
    <%= turbo_frame_tag "survey_question_#{qq_form.index}" do %>
      <%= qq_form.hidden_field :id, value: params[:id] %>
      <%= qq_form.hidden_field :_destroy, value: true %>
    <% end %>
  <% end %>
<% end %>