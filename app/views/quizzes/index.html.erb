<p style="color: green"><%= notice %></p>

<h1 class="pb-4">Quizzes</h1>
  <%= link_to "New Quiz", new_quiz_path, class: "col btn btn-primary fs-4 mb-2" %>
<hr>


<div id="quizzes">
  <% @quizzes.each do |quiz| %>
    <div class="card mb-5 shadow-sm d-flex">
      <div class="container py-3">
        <div class="row align-items-center">
          <div class=" fs-4 col-12 col-md-10 text-break">
            <p class="mb-0 me-3"><strong>Name:</strong> <%= quiz.name %></p>
          </div>
          <div class="col-12 col-md text-end mt-3">
            <%= link_to "Show Quiz", quiz, class: " btn btn-success fs-5" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
